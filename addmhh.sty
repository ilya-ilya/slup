\DeclareRobustCommand\mh[1]{%
        #1\nobreak
        \discretionary{}{\hbox{$#1$}}{}
    }

\escapechar-1

\def\addmh@symb#1{%
        \expandafter\mathchardef\csname mh@#1\endcsname=\the\mathcode`#1%
        \proc@active\edef{#1}{\noexpand\mh\csname mh@#1\endcsname}%
        \everymath\expandafter{\the\everymath\catcode`#1\active}%
    }
%\@onlypreamble\addmh@symb
\def\addmh@cs#1{%
        \expandafter\let\csname mh@\string#1\endcsname#1%
        \edef#1{%
                \noexpand\mh
                \expandafter\noexpand\csname mh@\string#1\endcsname
            }%
    }
